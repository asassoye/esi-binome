{% extends 'base.html.twig' %}

{% block body %}

	<main class="container" id="root">
		<div class="row">
			<aside class="col-12 col-lg-4 colored">
				{% block left %}
					<h2>Synchronise your timetable with your friends for more fun!</h2>
				{% endblock %}
			</aside>
			<div class="col-12 col-lg-8 content">
				{% if app.user %}
					<a href="{{ path('app_logout') }}" class="btn btn-sm btn-dark"
					   style="display: block; position: absolute; top: 1rem; right: 1rem;">
						<i class="fas fa-fw fa-sign-out-alt"></i>
					</a>
				{% endif %}
				{% for message in app.flashes('success') %}
					<div class="alert alert-success" role="alert">
						{{ message }}
						<button type="button" class="close" data-dismiss="alert" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
				{% endfor %}
				{% for message in app.flashes('warning') %}
					<div class="alert alert-warning" role="alert">
						{{ message }}
						<button type="button" class="close" data-dismiss="alert" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
				{% endfor %}
				{% for message in app.flashes('error') %}
					<div class="alert alert-danger" role="alert">
						{{ message }}
						<button type="button" class="close" data-dismiss="alert" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
				{% endfor %}
				{% for message in app.flashes('info') %}
					<div class="alert alert-primary" role="alert">
						{{ message }}
						<button type="button" class="close" data-dismiss="alert" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
				{% endfor %}
				{% block right %}
				{% endblock %}
			</div>
		</div>
	</main>
	<footer class="container">
		<p>
			Copyright Â© 2020-{{ "now"|date("Y") }} Made with <i class="fas fa-heart"></i> for ESI under GNU Affero General
			Public License. <br>
			<small><a href="https://github.com/asassoye/esi-binome"><i class="fas fa-code-branch"></i> Source code</a> Feel
				free to contribute!</small>
		</p>
	</footer>
{% endblock %}