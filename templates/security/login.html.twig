{% extends 'template.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block right %}
   <h1>Se connecter</h1>
   <p>Veuillez vous connecter ou vous créer un compte si vous n'en avez pas encore un</p>

   <form method="post">
      {% if error %}
         <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
      {% endif %}

      <div class="row">
         <div class="col">
            <input type="text" class="form-control"
                   name="username" id="inputUsername"
                   value="{{ last_username }}"
                   placeholder="Matricule">
         </div>
         <div class="col">
            <input type="password" class="form-control"
                   name="password" id="inputPassword"
                   value="{{ last_username }}"
                   placeholder="Mot de passe"
                   required autofocus
            >
         </div>
      </div>

      <input type="hidden" name="_csrf_token"
             value="{{ csrf_token('authenticate') }}"
      >
      <hr class="my-4">
      <p class="mt-4">
         <button class="btn btn-sm btn-primary btn-block" type="submit">
            <i class="fas fa-fw fa-sign-in-alt"></i> Se connecter
         </button>
         <a class="btn btn-sm btn-dark btn-block" href="{{ path('app_register') }}"><i
                  class="fas fa-fw fa-user-plus"></i> Créer un compte</a></p>
   </form>
{% endblock %}